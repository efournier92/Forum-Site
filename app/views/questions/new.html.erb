<% if @question.errors.any? %>

  <% @question.errors.full_messages.each do |msg| %>
    <div><%= msg %></div>
  <% end %>

<% end %>

<%= form_for @question do |f| %>
  <%= f.label      :title %>
  <%= f.text_field :title %>
  <%= f.label      :description %>
  <%= f.text_area  :description %>
  <%= f.submit 'Submit Question' %>
<% end %>
