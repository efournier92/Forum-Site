<% if @question.errors.any? %>
  <% @question.errors.full_messages.each do |msg| %>
    <div>
      <%= msg %>
    </div>
  <% end %>
<% end %>

<h1>Edit Question</h1>
<%= form_for @question do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :description %>
  <%= f.text_area :description %>
  <%= f.submit 'Submit Revision' %>
<% end %>

<%= link_to('Delete Question', @question, method: :delete) %><br>
